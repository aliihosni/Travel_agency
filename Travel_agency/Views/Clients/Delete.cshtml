@model Travel_agency.Models.Client

@{
    ViewBag.Title = "Supprimer client";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <p>@ViewBag.Message</p>


    <div class="box box-info">

        <div class="box-header">
            <h3 class="box-title">Etes vous sûr de supprimer ça?</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12">

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Client</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Nom)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Nom)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Prenom)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Prenom)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Adresse)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Adresse)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.NumeroTelephone)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NumeroTelephone)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.NombrePersonneAccom)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NombrePersonneAccom)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" /> |
                                @Html.ActionLink("Retour", "Index")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
